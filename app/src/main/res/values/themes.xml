<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodDelivery" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

    <style name="Bottom" parent="TextAppearance.AppCompat.Widget.Button.Colored" />

    <style name="Default.Bottom" parent="">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout" />

    <style name="Header.TabLayout" parent="TabLayout">
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
        <item name="tabTextColor">#CCCCCC</item>
        <item name="tabTextAppearance">@style/Header</item>
    </style>

    <style name="Header" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.RoundTop">
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>